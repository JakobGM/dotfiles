{
  // General settings
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.formatOnSave": true,
  // Disable icons for info/warnings/errors,
  // but still enable signs such that signcolumn numbers are rendered with
  // different colors.
  // See: CocErrorHighlight, CocWarningSign, CocInfoSign
  "diagnostic.enableSign": true,
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.errorSign": "",
  // Remove '>>' sign rendered by coc-pyright
  "diagnostic.hintSign": "",
  "diagnostic.checkCurrentLine": true,
  // UltiSnips
  "snippets.userSnippetsDirectory": "~/.dotfiles/config/nvim/UltiSnips",
  "snippets.ultisnips.directories": ["UltiSnips"],
  "snippets.ultisnips.pythonPrompt": false,
  // Python settings
  "[python]": {
    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnSaveTimeout": 5000
  },
  "pyright.enable": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.stubPath": "~/dev/python-type-stubs",
  "python.analysis.typeCheckingMode": "strict",
  "python.venvPath": "~/.virtualenvs",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": ["--line-length=88"],
  "python.formatting.blackdPath": "blackd",
  "python.formatting.autopep8Path": "autopep8",
  "python.formatting.autopep8Args": [],
  // Linting
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": false,
  "python.linting.ruffEnabled": true,
  "python.linting.banditEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.linting.pytypeEnabled": false,
  "python.linting.pycodestyleEnabled": false,
  "python.linting.prospectorEnabled": false,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylamaEnabled": false,
  "python.linting.pylintEnabled": false,
  // Isort
  "python.sortImports.path": "",
  "python.sortImports.args": [],
  "pyright.disableDiagnostics": false,
  "pyright.completion.snippetSupport": true,
  "pyright.organizeimports.provider": "isort",
  // Autocompletion
  "suggest.preferCompleteThanJumpPlaceholder": false,
  "suggest.timeout": 5000,
  "suggest.completionItemKindLabels": {
    "keyword": "",
    "variable": "",
    "value": "",
    "operator": "Ψ",
    "function": "ƒ",
    "reference": "渚",
    "constant": "",
    "method": "",
    "struct": "פּ",
    "class": "",
    "interface": "",
    "text": "",
    "enum": "",
    "enumMember": "",
    "module": "",
    "color": "",
    "property": "",
    "field": "料",
    "unit": "",
    "event": "鬒",
    "file": "",
    "folder": "",
    "snippet": "",
    "typeParameter": "",
    "default": ""
  },
  // Language server settings
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "zsh"],
      "ignoredRootPaths": ["~"]
    }
  },
  // coc-htmldjango
  "htmldjango.enable": true,
  "htmldjango.formatting.provider": "djhtml",
  "htmldjango.completion.enable": true,
  "htmldjango.djhtml.tabWidth": 2,
  "[htmldjango]": {
    "coc.preferences.formatOnSave": true
  },
  // lua
  "[lua]": {
    "coc.preferences.formatOnSave": true
  },
  "sumneko-lua.enableNvimLuaDev": true,
  "Lua.codeLens.enable": true,
  "cSpell.userWords": ["credential", "report"]
}
