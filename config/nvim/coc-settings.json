{
  "coc.preferences.jumpCommand": "drop",

  "git.changedSign.text": "",
  "git.addedSign.text": "",
  "git.removedSign.text": "",
  "git.topRemovedSign.text": "",
  "git.changeRemovedSign.text": "",

  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.errorSign": "",
  "diagnostic.checkCurrentLine": true,

  "snippets.userSnippetsDirectory": "~/.dotfiles/config/nvim/UltiSnips",
  "snippets.ultisnips.directories": ["UltiSnips"],

  "pyright.enable": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.stubPath": "~/dev/python-type-stubs",
  "python.analysis.typeCheckingMode": "basic",
  "python.venvPath": "~/.virtualenvs",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": ["--line-length=88"],
  "python.formatting.blackdPath": "blackd",
  "python.formatting.autopep8Path": "autopep8",
  "python.formatting.autopep8Args": [],

  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.banditEnabled": false,
  "python.linting.mypyEnabled": false,
  "python.linting.pytypeEnabled": false,
  "python.linting.pycodestyleEnabled": false,
  "python.linting.prospectorEnabled": false,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylamaEnabled": false,
  "python.linting.pylintEnabled": false,

  "python.sortImports.path": "",
  "python.sortImports.args": [],
  "pyright.disableDiagnostics": false,
  "pyright.completion.snippetSupport": true,
  "pyright.organizeimports.provider": "isort",

  "suggest.preferCompleteThanJumpPlaceholder": false,
  "suggest.timeout": 5000,
  "suggest.echodocSupport": true,
  "suggest.completionItemKindLabels": {
    "keyword": "",
    "variable": "",
    "value": "",
    "operator": "Ψ",
    "function": "ƒ",
    "reference": "渚",
    "constant": "",
    "method": "",
    "struct": "פּ",
    "class": "",
    "interface": "",
    "text": "",
    "enum": "",
    "enumMember": "",
    "module": "",
    "color": "",
    "property": "",
    "field": "料",
    "unit": "",
    "event": "鬒",
    "file": "",
    "folder": "",
    "snippet": "",
    "typeParameter": "",
    "default": ""
  },

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "zsh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
